<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.scystl.todolist" >

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="AA_DB_NAME"
            android:value="Todo.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="5" />
        <meta-data
            android:name="AA_MODELS"
            android:value="org.scystl.entities.Todo" />

        <activity
            android:name=".TodoList"
            android:label="@string/title_activity_todo_list" >
        </activity>
        <activity
            android:name=".SimpleView"
            android:label="@string/title_activity_simple_view" >
        </activity>
        <activity
            android:name=".NewTodoActivity"
            android:label="@string/title_activity_new_todo" >
        </activity>
        <activity
            android:name=".ItemTodo"
            android:label="@string/title_activity_item_todo" >
        </activity>
    </application>

</manifest>
