<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="3"
        android:padding="0dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/txt_result"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:textSize="40sp"
            android:textAlignment="gravity"
            android:gravity="center_vertical|right"
            android:background="#ff4fc3f7"
            android:textColor="#ffffffff"
            android:paddingRight="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="4">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:weightSum="4">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="7"
                    android:id="@+id/btn_7"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="35dp"
                    android:background="#ffffffff"
                    android:onClick="onTouchNumber"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="4"
                    android:id="@+id/btn_4"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="35dp"
                    android:background="#ffffffff"
                    android:onClick="onTouchNumber"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="1"
                    android:id="@+id/btn_1"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="35dp"
                    android:background="#ffffffff"
                    android:onClick="onTouchNumber"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="."
                    android:id="@+id/btn_dot"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="35dp"
                    android:background="#ffffffff"
                    android:onClick="onTouchDot"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:weightSum="4">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="8"
                    android:id="@+id/btn_8"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="35dp"
                    android:background="#ffffffff"
                    android:onClick="onTouchNumber"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="5"
                    android:id="@+id/btn_5"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="35dp"
                    android:background="#ffffffff"
                    android:onClick="onTouchNumber"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="2"
                    android:id="@+id/btn_2"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="35dp"
                    android:background="#ffffffff"
                    android:onClick="onTouchNumber"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="0"
                    android:id="@+id/btn_0"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="35dp"
                    android:background="#ffffffff"
                    android:onClick="onTouchNumber"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:weightSum="4">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="9"
                    android:id="@+id/btn_9"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="35dp"
                    android:background="#ffffffff"
                    android:onClick="onTouchNumber"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="6"
                    android:id="@+id/btn_6"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="35dp"
                    android:background="#ffffffff"
                    android:onClick="onTouchNumber"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="3"
                    android:id="@+id/btn_3"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="35dp"
                    android:background="#ffffffff"
                    android:onClick="onTouchNumber"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="="
                    android:id="@+id/btn_equals"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="35dp"
                    android:background="#ff4fc3f7"
                    android:textColor="#ffffffff"
                    android:onClick="calculate"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:weightSum="4">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="+"
                    android:id="@+id/btn_plus"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="35dp"
                    android:background="#ffffffff"
                    android:onClick="onTouchOperation"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="-"
                    android:id="@+id/btn_minus"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="35dp"
                    android:background="#ffffffff"
                    android:onClick="onTouchOperation"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="*"
                    android:id="@+id/btn_multiply"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="35dp"
                    android:background="#ffffffff"
                    android:onClick="onTouchOperation"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="/"
                    android:id="@+id/btn_divide"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="35dp"
                    android:background="#ffffffff"
                    android:onClick="onTouchOperation"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
